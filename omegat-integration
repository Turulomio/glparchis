#!/bin/bash
echo "Este script lo hace todo, copia, lanza omegat y copia resultado"
rm -Rf doc/omegat-en/source/
rm -Rf doc/omegat-en/target/
mkdir -p doc/omegat-en/source
mkdir -p doc/omegat-en/target
cp INSTALL-ES.txt doc/omegat-en/source/INSTALL-EN.txt
cp AUTHORS-ES.txt doc/omegat-en/source/AUTHORS-EN.txt
cp CHANGELOG-ES.txt doc/omegat-en/source/CHANGELOG-EN.txt
omegat doc/omegat-en

cp doc/omegat-en/target/*.txt ./
echo "Te has acordado de generar las traducciones finales"
